{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "allowJs": false,
    "sourceMap": true, // For build, we should not include this
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "**/lib",
    "**/*.spec.ts"
  ]
}