{
  "name": "widget-editor",
  "version": "2.0.0",
  "main": "index.js",
  "private": true,
  "engines": {
    "yarn": ">=1.17.3"
  },
  "workspaces": [
    "src/applications/*",
    "src/packages/*",
    "src/playground/*",
    "src/adapters/*"
  ],
  "scripts": {
    "release": "release-it",
    "build": "rimraf -f dist && lerna run build",
    "compile:ts": "lerna run tsc",
    "watch:packages": "lerna run watch --parallel",
    "watch:widget-editor": "lerna run start --parallel --scope @playground/widget-editor --stream",
    "start:widget-editor": "npm-run-all --parallel watch:*",
    "build:widget-editor": "cd src/playground/widget-editor && npm run build",
    "test:widget-editor": "cd src/playground/widget-editor && yarn test --watchAll=false",
    "test:packages": "jest --verbose ./src/packages",
    "test": "jest --verbose ./src/packages",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "deploy:widget-editor": "cd src/playground/widget-editor && npm run deploy"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "babel-watch": "^7.0.0",
    "jest": "^24.9.0",
    "lerna": "latest",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.12.0",
    "release-it": "^13.5.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}
