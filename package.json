{
  "name": "widget-editor",
  "version": "2.0.0-v2-beta.1",
  "private": true,
  "engines": {
    "yarn": ">=1.17.3"
  },
  "workspaces": [
    "src/applications/*",
    "src/packages/*",
    "src/playground/*",
    "src/adapters/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "deploy": "rimraf -f dist && lerna run build && lerna run tsc && lerna publish --force-publish",
    "rollup": "rollup --config rollup.config.js",
    "lerna:publish": "lerna publish --conventional-commits --yes --skip-npm --skip-git",
    "build": "rimraf -f dist && lerna run compile && lerna run tsc",
    "compile:ts": "lerna run tsc",
    "watch:packages": "lerna run watch --parallel",
    "watch:widget-editor": "lerna run start --parallel --scope @widget-editor/playground --stream",
    "start:widget-editor": "npm-run-all --parallel watch:*",
    "build:widget-editor": "cd src/playground/widget-editor && npm run build",
    "test:widget-editor": "cd src/playground/widget-editor && yarn test --watchAll=false",
    "test:packages": "jest --verbose ./src/packages",
    "test": "jest --verbose ./src/packages",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "deploy:widget-editor": "cd src/playground/widget-editor && npm run deploy"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-watch": "^7.0.0",
    "babelrc-rollup": "^3.0.0",
    "dotenv-cli": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "latest",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.12.0",
    "release-it": "^13.5.2",
    "rollup-plugin-babel": "^4.4.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}
